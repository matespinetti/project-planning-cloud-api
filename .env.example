# Database - PostgreSQL connection string
DATABASE_URL=postgresql://projectplanning:projectplanning123@localhost:5432/projectplanning_cloud

# API Settings
API_V1_PREFIX=/api/v1
PROJECT_NAME=ProjectPlanning Cloud Persistence API

# CORS - comma separated list of origins (include proxy API URL)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Security
JWT_SECRET_KEY=change-me-access-secret
JWT_REFRESH_SECRET_KEY=change-me-refresh-secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_MINUTES=1440

# Bonita Integration
# BONITA_API_KEY: Secret API key for Bonita to authenticate requests (used in X-API-Key header)
# BONITA_SYSTEM_USER_ID: UUID of the Bonita system user (must match seed_data.py: 11111111-1111-1111-1111-111111111111)
BONITA_API_KEY=your-bonita-api-key-here
BONITA_SYSTEM_USER_ID=11111111-1111-1111-1111-111111111111
